<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vikkyb.Picx.pixectra">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.vikkyb.Picx.pixectra.SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vikkyb.Picx.pixectra.MainActivity"
            android:label="@string/app_name" />
        <activity android:name="com.vikkyb.Picx.pixectra.PhotoBook" />
        <activity
            android:name="com.vikkyb.Picx.pixectra.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.vikkyb.Picx.pixectra.imagepicker"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.vikkyb.Picx.pixectra.Bottompanel" />
        <activity
            android:name="com.vikkyb.Picx.pixectra.FiveColorChangingTabsActivity"
            android:theme="@style/AppTheme.TransNav" />
        <activity android:name="com.vikkyb.Picx.pixectra.retrouploader" />
        <activity android:name="com.vikkyb.Picx.pixectra.ShowImagesActivity"></activity>
        <activity android:name=".FirebaseActivity"></activity>
    </application>

</manifest>